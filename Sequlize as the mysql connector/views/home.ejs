<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/home.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <%- include("./includes/navbar.ejs"), {isLoggedIn:isLoggedIn | null} %> <!-- Moved inside body tag -->
    <div class="custom-container justify-content-center">

        <% if (products.length > 0) { %>
            <% products.forEach(product => { %> <!-- Corrected for loop syntax -->
                <div class="card mx-auto mt-4 mb-4 custom-card">
                    <img src="<%= "/public/images/" + product.image%>" class="card-img-top card-img" alt="<%= product.productname %>">
                    <div class="card-body">
                        <h4 class="card-title"><%= product.productname %></h4> <!-- Corrected closing tag -->
                        <h4 class="card-titles">Rs.<%= product.price %></h4> <!-- Corrected EJS syntax -->
                    </div>
                    <% if( isLoggedIn === "true" ){ %>
                    <div class="justify-content-between d-flex ">
                        <a href=<%="/delete-product/"+ product.id %> class="btn btn-outline-dark edit-button mx-1 mt-4">
                            <i class="bi bi-trash3"></i> 
                        </a>
                        <a href= <%= "/edit-product/"+ product.id %> class="btn btn-outline-dark edit-button mx-1 mt-4">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </div>
                    <% } %>
                </div>
            <% }); %> <!-- Corrected for loop syntax -->
        <% } else { %>
            <div class="container d-flex d-inline justify-content-center">
                <div class="container justify-content-center mt-4 w-50">
                    <h1>No product is available currently</h1>
                    <a href="/add-product" class="btn p-2 btn-outline-dark">Add new product</a>
                </div>
            </div>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

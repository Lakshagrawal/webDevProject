<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/add-product.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    
</body>
<%- include("./includes/navbar.ejs"), {isLoggedIn:isLoggedIn} %>
<div class="container my-4 form-container">

    <form method="post" class="w-25 " onsubmit="validatPassword()" action="/sign-up" >
        <h2 class="m-4">Sign Up</h2>
        <div class="form-control m-3">
            <div class="row"> 
                <div class="col">
                    <label class="form-label fs-5">Email</label>
                    <input type="text" name="userName" class="form-control" placeholder="name@example.com">
                </div>
            </div>
            <div class="row d-flex">
                <label class="form-label fs-5">Password</label>
                <div class="col-10">
                    <input type="password" name="password" class="form-control" placeholder="Password" id="password">
                </div>
                <div class="col-2 d-flex align-items-center justify-content-center">
                    <i class="bi bi-eye-slash btn" onclick="toggleDisplay(this)" name="passwordHidd"></i>
                </div>
            </div>
            <div class="row mt-2 d-flex">
                <label class="form-label fs-5">Confirm Password</label>
                <div class="col-10">
                    <input type="password" name="confirmPassword" class="form-control"placeholder="Confirm Password" id="confirmPassword">
                </div>
                <div class="col-2 d-flex align-items-center justify-content-center">
                    <i class="bi bi-eye-slash btn " onclick="toggleDisplay(this)" name="confirmPasswordHidd"></i>
                </div>
            </div>
        </div>
        <div id="helper-text" class="text-danger"></div>
        <button type="submit" class="btn fs-4 w-100 m-3 btn-primary">Sign Up</button>
    </form>
</div>
    
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script>
    let password = document.getElementById("password");
    let confirmPassword = document.getElementById("confirmPassword");
    const toggleDisplay = (e)=>{

        let SelectToggle = e.getAttribute("name");

        switch(SelectToggle){
            case "passwordHidd":
                password.type = "text";
                e.className = "bi bi-eye";
                e.setAttribute("name","password");
                break;
            case "password":
                password.type = "password";
                e.className = "bi bi-eye-slash";
                e.setAttribute("name","passwordHidd");
            break;
            case "confirmPasswordHidd":
                confirmPassword.type = "text";
                e.className = "bi bi-eye";
                e.setAttribute("name","confirmPassword");
            break;
            case "confirmPassword":
                confirmPassword.type = "password";
                e.className = "bi bi-eye-slash";
                e.setAttribute("name","confirmPasswordHidd");
            break;

        }

        const validatPassword = ()=>{
            if(document.getElementById("password").value === document.getElementById("confirmPassword").value){
                document.getElementById("helper-text").innerHTML = "";
                return true;
            }
            else{
                document.getElementById("helper-text").innerHTML = "Password Do Not Match"
                return false;
            } 

        }

    } 
</script>
</html>